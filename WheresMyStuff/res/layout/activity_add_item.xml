<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddItemActivity" >

    <EditText
        android:id="@+id/donate_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/donate_item_name"
        android:layout_toRightOf="@+id/donate_item_name"
        android:ems="10"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/donate_details"
        android:orientation="vertical" >

    </LinearLayout>

    <Button
        android:id="@+id/donate_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="34dp"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/donate_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="122dp"
        android:text="@string/lost_description"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/donate_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/donate_details"
        android:layout_alignLeft="@+id/donate_item_name"
        android:layout_marginBottom="22dp"
        android:text="@string/lost_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/donate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/donate_title_text"
        android:layout_alignRight="@+id/donate_details"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <DigitalClock
        android:id="@+id/donate_digitalClock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:text="@string/DigitalClock" />

    <TextView
        android:id="@+id/donate_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/donate_digitalClock1"
        android:text="@string/lost_title_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/donate_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/donate_item_name"
        android:layout_centerVertical="true"
        android:text="@string/lost_contact_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/donate_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/donate_location_text"
        android:layout_alignRight="@+id/donate_details"
        android:layout_toRightOf="@+id/donate_location_text"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lost_phone_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/donate_location_text"
        android:layout_below="@+id/donate_location_text"
        android:text="@string/lost_phone_number"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/lost_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lost_phone_number_text"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/lost_phone_number_text"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/lost_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lost_phone_number_text"
        android:text="@string/lost_email"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/lost_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lost_email_text"
        android:layout_alignLeft="@+id/donate_name"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/donate_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/donate_submit"
        android:layout_alignBottom="@+id/donate_submit"
        android:layout_toLeftOf="@+id/lost_email"
        android:text="@string/back" />

</RelativeLayout>
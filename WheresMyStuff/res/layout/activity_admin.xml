<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity" >

    <Button
        android:id="@+id/Add_Admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/Add_Admin" />

    <Button
        android:id="@+id/Create_Admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Add_Admin"
        android:layout_below="@+id/Add_Admin"
        android:layout_marginTop="22dp"
        android:text="@string/Create_Admin"/>

    <Button
        android:id="@+id/Unlock_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Create_Admin"
        android:layout_below="@+id/Create_Admin"
        android:layout_marginTop="28dp"
        android:text="@string/Unlock_User" />

</RelativeLayout>